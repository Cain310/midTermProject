<html>

<head>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.scss" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <!-- Image and text -->
  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="#">
      <img src="http://icons.iconarchive.com/icons/dtafalonso/modern-xp/256/ModernXP-73-Globe-icon.png" width="30"
        height="30" class="d-inline-block align-top" alt="">
      Map App
    </a>
    <a href="#" onClick="unhideReg()">Register</a>
    <form method="POST" action="<%=`/users`%>">
      <input class="form-control" id="register" type="email" name="email" placeholder="enter email here"
        style="display:none" />
      <input class="form-control" id="register2" type="password" name="password" placeholder="Enter password here"
        style="display:none" />
      <input type="submit" value="Register" id="register3" style="display:none" />
    </form>

    <a> | </a>
    <a href="#" onClick="unhideLog()">Login</a>
    <form method="POST" action="<%=`/login`%>">
      <input class="form-control" id="login" type="email" name="email" placeholder="enter email here"
        style="display:none" />
      <input class="form-control" id="login2" type="password" name="password" placeholder="Enter password here"
        style="display:none" />
      <input type="submit" value="Login" id="login3" style="display:none" />
    </form>

    <form method="POST" action="<%=`/logout`%>">
      <button class="btn btn-primary" type="submit" value="logout" action="/logout">Log out</button>
    </form>
  </nav>
</head>

<body>
  <div class="row">
    <div class="col-8">
      <div id="googleMap" style="width:100%;height:400px;"></div>

      <script>
        function myMap() {
          var mapProp = {
            center: new google.maps.LatLng(43.761539, -79.411079),
            zoom: 10
          };
          var map = new google.maps.Map(
            document.getElementById("googleMap"),
            mapProp
          );
          var myLatLng = { lat: 43.6, lng: -79.4 };
          var marker = new google.maps.Marker({
            position: myLatLng,
            map: map,
            title: 'Hello World!'
          });
        }
      </script>
    </div>
    <div class="col-4">
      <h3>Welcome</h3>
      <h5>Favorites:</h5>

      <h5>Maps:</h5>
      <h5 class="category-list--title">List of points:</h5>
      <ul class="list-group"></ul>
    </div>
  </div>
  </div>

  <div id="new-point">
    <form>
      <div class="form-group">
        <label for="exampleFormControlInput1">Name your point!</label>
        <input class="form-control" id="exampleFormControlInput1" placeholder="Name">
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Pick your Map</label>
        <select class="form-control" id="exampleFormControlSelect1">
          <option>Map 1</option>
          <option>Map 2</option>
          <option>Map 3</option>
          <option>Map 4</option>
          <option>Map 5</option>
        </select>

      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Comment:</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>

      </div>
      <form method="POST" action="NEW POINT">
        <button class="btn btn-primary" type="submit" value="Submit" action="/NEW POINT">Submit</button>
      </form>
    </form>

  </div>


  <script>
    function unhideLog() {
      document.getElementById('login').style.display = "block";
      document.getElementById('login2').style.display = "block";
      document.getElementById('login3').style.display = "block";
    }
    function unhideReg() {
      document.getElementById('register').style.display = "block";
      document.getElementById('register2').style.display = "block";
      document.getElementById('register3').style.display = "block";
    }
  </script>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNQzcNPSk7Oq8PMo3ueEirF_FA-YErYRI&callback=myMap"></script>
</body>

</html>
